{
  "name": "express-crud-api",
  "version": "1.0.0",
  "description": "Enterprise-grade Express.js CRUD API with MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "migrate": "node migrations/migrate.js",
    "migrate:prod": "NODE_ENV=production node migrations/migrate.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean:uploads": "rm -rf uploads/*",
    "clean:logs": "rm -rf logs/*"
  },
  "keywords": [
    "express",
    "nodejs",
    "mysql",
    "crud",
    "api",
    "jwt",
    "authentication",
    "rest-api"
  ],
  "author": "Rajdeep Chakraborty <rajdeep@goqii.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.3",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  }
}